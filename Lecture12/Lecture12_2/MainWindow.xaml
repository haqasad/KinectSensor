<Window x:Class="Lecture12_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lecture12_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="530" Width="950">
    <Grid>
        <Canvas x:Name="canvas1" HorizontalAlignment="Left" Height="480" Margin="10,10,0,0" VerticalAlignment="Top" Width="640">
            <Image x:Name="image1" HorizontalAlignment="Left" Height="480" Margin="0,0,0,0" VerticalAlignment="Top" Width="640"/>
        </Canvas>
        <Label x:Name="label0" Content="Words Hypothesized:" HorizontalAlignment="Left" Margin="680,50,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Words Recognized:" HorizontalAlignment="Left" Margin="680,120,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label2" Content="Confidence:" HorizontalAlignment="Left" Margin="680,190,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="wordsTenative" HorizontalAlignment="Left" Height="23" Margin="680,80,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="wordsRecognized" HorizontalAlignment="Left" Height="23" Margin="680,150,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="confidenceTxt" HorizontalAlignment="Left" Height="23" Margin="680,220,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="statusBar" HorizontalAlignment="Left" Height="23" Margin="680,280,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="200"/>
        <Label x:Name="label3" Content="Say Close the Application - to quit" HorizontalAlignment="Left" Margin="680,20,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
